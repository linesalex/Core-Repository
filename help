# Step 1: Install the SCL repository
sudo yum install -y centos-release-scl-rh

# Step 2: Install Node.js 14 from SCL (RHEL 7 compatible)
sudo yum install -y rh-nodejs14

# Step 3: Enable the SCL environment in your shell
source /opt/rh/rh-nodejs14/enable

# Step 4: Verify in this shell
node --version  # Should show v14.x.x (e.g., v14.21.3)
npm --version   # Should show 6.x.x

# Step 5: Make it permanent (add to your .bashrc)
echo 'source /opt/rh/rh-nodejs14/enable' >> ~/.bashrc
source ~/.bashrc

# Step 6: Test again
node --version
npm --version


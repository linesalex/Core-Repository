# The basic C compiler is missing, let's install it
sudo yum install -y gcc

# Verify gcc is available
gcc --version
which gcc

# Create symlink for 'cc' if needed
sudo ln -sf /usr/bin/gcc /usr/bin/cc

# Test
cc --version

cd /root/Core-Repository/backend

# Now try installing sqlite3@4.2.0 again
npm install sqlite3@4.2.0

# Test
npm start



# Install system sqlite development libraries
sudo yum install -y sqlite-devel

# Then try building sqlite3
cd /root/Core-Repository/backend
npm install sqlite3@4.2.0 --build-from-source



# Install missing compiler
sudo yum install -y gcc
sudo ln -sf /usr/bin/gcc /usr/bin/cc

# Try installing sqlite3 again
cd /root/Core-Repository/backend
npm install sqlite3@4.2.0

# Test
npm start




# Check what development tools you have
rpm -qa | grep -E 'gcc|make|kernel-devel'

# Check CXXABI versions available
strings /lib64/libstdc++.so.6 | grep CXXABI






# Verify all build tools
gcc --version
g++ --version  
make --version
which cc
# Check current git status
git --version
which git
rpm -qa | grep git

# Remove all git packages cleanly
sudo yum remove -y git* perl-Git*

# Clear yum cache completely
sudo yum clean all

# Install git from base RHEL repository (avoid conflicts)
sudo yum install -y git --disablerepo=ius,epel

# Test git
git --version  # Should show git version 1.8.3.1 or similar


# Download the repository as a ZIP file (no git required)
cd /root
wget https://github.com/your-username/Core-Repository/archive/refs/heads/main.zip
# Replace 'your-username' with the actual GitHub username/organization

# Extract
unzip main.zip
mv Core-Repository-main Core-Repository
cd Core-Repository


# Download a static git binary that works on any Linux
cd /tmp
wget https://github.com/git/git/releases/download/v2.17.0/git-2.17.0.tar.gz
# This is an older version compatible with RHEL 7

# Or use a pre-compiled static git
wget https://github.com/niess/git-static/releases/download/v2.30.0/git-v2.30.0-x86_64-linux.tar.gz
tar xzf git-v2.30.0-x86_64-linux.tar.gz
sudo cp git-v2.30.0-x86_64-linux/bin/git /usr/local/bin/
git --version

sudo yum remove -y git* perl-Git*
sudo yum clean all
sudo yum install -y git --disablerepo=ius,epel
git --version



cd /root
git clone https://github.com/your-username/Core-Repository.git
# Replace with your actual repository URL

cd Core-Repository
ls -la  # Should show backend/, frontend/, README.md, etc.
# Clean up compilation attempts
cd /tmp
rm -rf node-v*

# Download pre-compiled Node.js 12 binary (static, works on any Linux)
wget https://unofficial-builds.nodejs.org/download/release/v12.22.12/node-v12.22.12-linux-x64-musl.tar.xz

# Extract it
tar -xJf node-v12.22.12-linux-x64-musl.tar.xz

# Copy to system location
sudo cp -r node-v12.22.12-linux-x64-musl/* /usr/local/

# Add to PATH
echo 'export PATH=/usr/local/bin:$PATH' >> ~/.bashrc
source ~/.bashrc

# Test immediately
/usr/local/bin/node --version
/usr/local/bin/npm --version

# Test with PATH
node --version
npm --version


# Configure npm for your system
npm config set python python2
npm config set unsafe-perm true

# Test npm
npm --version

# Now install your application (assuming you have the files)
cd /root/Core-Repository/backend  # or wherever your files are
npm install

cd ../frontend
npm install


